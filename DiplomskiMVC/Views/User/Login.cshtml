@model LoginFields
@{
    ViewData["PageTitle"] = "register-page";
    string email = ViewContext.HttpContext.Request.Query["email"];
    if (email != null && email != "") Model.Email = email;
}

<div class="row">
    <div class="col-lg-5 col-md-6 offset-lg-0 offset-md-3">
        <div id="square7" class="square square-7"></div>
        <div id="square8" class="square square-8"></div>
        <div class="card card-register">
            <div class="card-header card-header-primary">
                <h4 >Prijava</h4>
            </div>
            <div class="card-body">
                @if(ViewData.ModelState.ErrorCount > 0)
                {
                <div class="input-group">
                    <div class="alert alert-danger w-100">
                        <h4 class="font-weight-bold">Greška</h4>
                        @foreach (var modelState in ViewData.ModelState.Values)
                        {
                            foreach (var error in modelState.Errors)
                            {
                                <span>@error.ErrorMessage</span>
                            }
                        }
                    </div>
                    
                </div>
                }
                <form class="form" asp-action="Login">
                    @Html.AntiForgeryToken()
                    <div class="input-group">
                        <div class="input-group-prepend">
                        </div>
                        <input type="email" asp-for="Email" placeholder="Email" class="form-control">
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <div class="input-group">
                        <div class="input-group-prepend">
                        </div>
                        <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                    </div>
                    <div class="input-group">
                        Nemate nalog? <a asp-action="RegisterStudent" asp-controller="User" class="ml-2">Registruj se ovde</a>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div class="card-footer text-right pl-0">
                        <button type="submit" class="btn btn-primary btn-round btn-lg">Uloguj se</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>